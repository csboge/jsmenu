<view class="page-container">
    <view class='page-head'>
        <image class='head-bg' src='http://img.my-shop.cc/teacher/tc3_hd_bg.jpg'></image>
        <view class='person-info-box'>
            <view class='person-info'>
                <view class='head-img-box'>
                    <image class='head-img' src='{{user_data.portrait}}'></image>
                </view>
                <view class='person-name w l b'>{{user_data.name}}</view>
                <view class='person-position w m'>{{user_data.explain}}</view>
                <view class='person-touch'>
                    <view class='touch-box'>
                        <image class='tel-icon' src='../../assets/images/tc3_tel_icon.png' bindtap='call'></image>
                        <button class='share-btn' open-type='share'>
                            <image class='share-icon' src='../../assets/images/tc3_share_icon.png'></image>
                        </button>
                    </view>
                </view>
            </view>
        </view>
        <view class='tri-angle'></view>
    </view>
    <view class='page-section'>
        <view class='join-us'>
            <view class='join-title'>
                <image class='join-title-img' src='http://img.my-shop.cc/teacher/tc3_hd_title.jpg?1'></image>
            </view>
            <view class='join-item-box join-mid-box'>
                <view class='join-item'>
                    <view class='join-des m red b'>
                        <view class='join-txt'>{{user_data.deeds["1"].content}}</view>
                    </view>
                    <view class='join-time ms'>{{user_data.deeds["1"].title}}</view>
                    <view class='join-line'></view>
                </view>
                <image class='join-img' src='{{user_data.bg}}'></image>
                <view class='join-item'>
                    <view class='join-des m red b'>
                        <view class='join-txt'>{{user_data.deeds["5"].content}}</view>
                    </view>
                    <view class='join-time ms'>{{user_data.deeds["5"].title}}</view>
                    <view class='join-line'></view>
                </view>
            </view>
            <view class='join-item-box'>
                <view class='join-item'>
                    <view class='join-des m red b'>
                        <view class='join-txt'>{{user_data.deeds["2"].content}}</view>
                    </view>
                    <view class='join-time ms'>{{user_data.deeds["2"].title}}</view>
                    <view class='join-line'></view>
                </view>
                <view class='join-item'>
                    <view class='join-des m red b'>
                        <view class='join-txt'>{{user_data.deeds["3"].content}}</view>
                    </view>
                    <view class='join-time ms'>{{user_data.deeds["3"].title}}</view>
                    <view class='join-line'></view>
                </view>
                <view class='join-item'>
                    <view class='join-des m red b'>
                        <view class='join-txt'>{{user_data.deeds["4"].content}}</view>
                    </view>
                    <view class='join-time ms'>{{user_data.deeds["4"].title}}</view>
                    <view class='join-line'></view>
                </view>
            </view>
        </view>
        <image class='bg-md-img' src='http://img.my-shop.cc/teacher/tc3_bg_img.jpg?1'></image>
        <view class='choice-box'>
            <view class='choice-head'>
                <image class='box-img' src='http://img.my-shop.cc/teacher/tc3_box_img.png?1'></image>
                <view class='choice-title m'>一种选择，一种别样的人生</view>
            </view>
            <view class='choice-content'>
                <view class='choice-item' bindtap='jump' data-index='{{index}}' wx:for="{{user_data.product}}">
                    <image class='choice-img' src='{{item.img}}'></image>
                    <view class='choice-des'>
                        <image class='choice-icon' src='http://img.my-shop.cc/teacher/tc3_yl_icon1.png'></image>
                        <view class='choice-txt m red'>{{item.title}}</view>
                    </view>
                </view>
            </view>
        </view>
        <image class='se-bg' src='http://img.my-shop.cc/teacher/tc3_se_bg.jpg'></image>
        <view class='img-content'>
            <view class='img-content-title'>
                <view class='title-txt m'>您是</view>
                <view class='title-txt-b red b ls'>千里马</view>
                <view class='title-txt m'>，我就是</view>
                <view class='title-txt-b red b ls'>伯乐</view>
            </view>
            <view class='des-box'>
                <view class='des-txt m' wx:for="{{user_data.join}}">{{item}}</view>
            </view>
            <view class='img-content-title'>
                <view class='title-txt-b red b ls'>招聘</view>
            </view>
            <view class='des-box zhaop'>
                <view class='des-item' wx:for="{{user_data.recruit}}">
                    <view class='des-title ls b'>{{item.title}}</view>
                    <view class='des-txt m'>{{item.content}}</view>
                </view>
            </view>
            <swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="{{5000}}" duration="{{700}}" wx:if="{{user_data.banner.length>0?true:false}}">
                <block wx:for="{{user_data.banner}}">
                    <swiper-item>
                        <image src="{{item}}" class="slide-image"/>
                    </swiper-item>
                </block>
            </swiper>
            <view class='img-box'>
                <image class='content-img' src='{{item}}' wx:for="{{user_data.image}}"></image>
            </view>
        </view>
    </view>
</view>