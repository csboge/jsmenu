<view class="page-container">
    <view class='page-section'>
        <view class='form-title'>请输入菜品信息</view>
        <view class='form-section'>
            <form class='form-content' bindsubmit="formSubmit">
                <view class="section">
                    <view class="section-title">菜品名称</view>
                    <input class='input-txt' name="cate_name" placeholder="请输入菜品名称" />
                </view>
                <view class="section">
                    <view class="section-title">所属分类</view>
                    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                        <view class="input-txt {{index>0?'':'gray'}}">
                            {{array[index]}}
                        </view>
                    </picker>
                </view>
                <view class="section">
                    <view class="section-title">菜品价格</view>
                    <input class='input-txt' type='number' placeholder='请输入菜品价格'></input>
                </view>
                <view class="section">
                    <view class="section-title">菜品图片</view>
                    <view class='dish-img-box' bindtap='upImg' wx:if="{{!show_pic}}"></view>
                    <image class='dish-img' src='{{img_url}}' bindtap='upImg' wx:if="{{show_pic}}"></image>
                </view>
                <view class='spec-btn m' bindtap='addSpec'>点击添加规格</view>
                <view class='line'></view>
                <view class="section spec-box">
                    <view class="section-title">规 格 一</view>
                    <input class='input-txt spec-input' type='number' placeholder='请输入菜品规格名称'></input>
                </view>
                <view class='line'></view>
                <view class="btn-area">
                    <button formType="submit">保存</button>
                    <button bindtap='cancel'>取消</button>
                </view>
            </form>
        </view>
    </view>
</view>