/**index.wxss**/
page {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.container{
	
	width: 100%;
	height: 100%;
	background-color: #509863;
	padding: 0;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}
.dot{
	padding: 35rpx 0 27rpx 0;
}
.dot view{
	display:inline-block;
	width: 20rpx;
	height: 20rpx;
	background-color:#007920;
	border-radius: 50%;
}
.dot .one {
	width: 22rpx;
	border: 2rpx solid #fff;
	box-sizing: border-box;
}
.one,.two {
	margin-right: 85rpx; 
	position: relative;
}
.one::after,.two::after{
	content: "";
	position: absolute;
	width: 85rpx;
	border-top: solid 1rpx #007920;
	top:9rpx;
	left: 20rpx;
}
.section {
	width: 690rpx;
	background-color: #fff; 
	margin-bottom: 265rpx;
	padding-bottom: 123rpx;
}
.title{
	text-align: center;
	color: #383838;
	font-size: 38rpx;
	padding: 71rpx 0 50rpx 0;
}
.words{
	width: 554rpx;
	margin: 0 auto;
	text-align: center;
	font-size: 26rpx;
	color: #a6a6a6;
	line-height: 1.8;
}
.pic {
	width: 524rpx;
	height: 212rpx;
	margin:34rpx auto 0 auto;
}
.pic image {
	width: 100%;
	height: 100%;
}
.btn {
	margin: 63rpx auto 0 auto;
	display: block;
	width: 300rpx;
	height: 80rpx;
	border: 1rpx solid #3caf6c;
	background-color: #fff;
	font-size: 33rpx;
	color: #3caf6c;
	text-align: center;
	line-height: 80rpx;
	border-radius: 4rpx; 
}
.bg-color {
	background-color: rgba(0, 0, 0, 0.1);
	 opacity: 0.7;
 }
