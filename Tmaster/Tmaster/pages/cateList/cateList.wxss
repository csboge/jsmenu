/* pages/cateList/cateList.wxss */

.page-container{
    width: 100%;
    background: #f2f2f2;
}

.cate-title-box{
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    justify-content: space-around;
    line-height: 3.5;
    background: #fff;
    width: 100%;
    border-bottom: 4rpx solid #f2f2f2;
    z-index: 1;
}

.cate-detail-box{
    margin-top: 6rpx;
    padding-top: 100rpx;
    background: #FFf;
    line-height: 3.5;
}

.cate-detail-item{
    display: flex;
    justify-content: space-around;
    border-bottom: 2rpx solid #f2f2f2;
}

button{
    display: flex;
    align-items: center;
    border: 0;
    padding-left: 0;
    padding-right: 0;
    padding: 0 20rpx;
    line-height: 0;
    background: transparent;
}

button::after{
    border: 0;
}

.button-hover{
    background: transparent;
}

.btn-img{
    width: 40rpx;
}

.cate-btn{
    display: flex;
    justify-content: center;
    width: 33.3%;
}

.add-btn-box{
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 30rpx 0;
    width: 100%;
    height: 40rpx;
    text-align: center;
    background: #509863;
}

.add-btn-box:active{
    color: #ddd;
    background: #438355;
}

.cate-name{
    width: 33.3%;
    text-align: center;
}

.cate-type{
    width: 33.3%;
    text-align: center;
}