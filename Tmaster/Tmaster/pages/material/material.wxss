/* pages/material/material.wxss */
page {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.container{
	width: 100%;
	height: 100%;
	background-color: #509863;
	padding: 0;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}
.dot{
	padding: 17rpx 0 17rpx 0;
}
.dot view{
	display:inline-block;
	width: 20rpx;
	height: 20rpx;
	background-color:#007920;
	border-radius: 50%;
}
.dot .two {
	width: 22rpx;
	border: 2rpx solid #fff;
	box-sizing: border-box;
}
.one,.two {
	margin-right: 85rpx; 
	position: relative;
}
.one::after,.two::after{
	content: "";
	position: absolute;
	width: 85rpx;
	border-top: solid 1rpx #007920;
	top:9rpx;
	left: 20rpx;
}
.section {
	width: 690rpx;
	background-color: #fff; 
	padding-bottom: 30rpx;
	margin-bottom: 50rpx;

}
.title{
	text-align: center;
	color: #333;
	font-size: 38rpx;
	padding: 71rpx 0 25rpx 0;
}
.text {
	font-size: 24rpx;
	color: #333;
	text-align: center;
	margin-bottom: 29rpx;
}
.warp-name {
	width: 632rpx;
	margin: 0 auto 0 auto;
	padding-top: 55rpx;
	border-top:1rpx solid #ebebeb; 
	border-bottom:1rpx solid #ebebeb;
}
.form-title {
	font-size: 30rpx;
	color: #333;
}
.form-name input {
	display: block;
	margin-top: 23rpx;
	margin-left:24rpx; 
	width: 600rpx;
	height: 80rpx;
	border: 1rpx solid #808080;
	font-size:24rpx;
	padding-left:30rpx;
	box-sizing: border-box;
}
.words {
	margin: 8rpx 0 17rpx 24rpx;
	width: 600rpx;
	font-size:24rpx;
	color: #808080;

}
.from-address {
	width: 632rpx;
	margin: 0 auto 0 auto;
	padding-top: 55rpx;
	margin-bottom: 19rpx;
}
.from-tel {
	width: 632rpx;
	margin: 0 auto 0 auto;
	padding-top: 55rpx;
	border-top:1rpx solid #ebebeb; 
	border-bottom:1rpx solid #ebebeb;
	padding-bottom: 19rpx;

}

.btn {
	margin: 50rpx auto 0 auto;
	display: block;
	width: 300rpx;
	height: 80rpx;
	background-color: #fff;
	font-size: 30rpx;
	color: #ccc;
	text-align: center;
	line-height: 80rpx;
	border-radius: 4rpx; 
}
.bg-color {
	background-color: rgba(0, 0, 0, 0.1);
	 opacity: 0.7;
 }
