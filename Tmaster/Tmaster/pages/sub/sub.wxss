/* pages/sub/sub.wxss */
page {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.container{
	width: 100%;
	height: 100%;
	background-color: #509863;
	padding: 0;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}
.dot{
	padding: 17rpx 0 17rpx 0;
}
.dot view{
	display:inline-block;
	width: 20rpx;
	height: 20rpx;
	background-color:#007920;
	border-radius: 50%;
}
.dot .three {
	width: 22rpx;
	border: 2rpx solid #fff;
	box-sizing: border-box;
}
.one,.two {
	margin-right: 85rpx; 
	position: relative;
}
.one::after,.two::after{
	content: "";
	position: absolute;
	width: 85rpx;
	border-top: solid 1rpx #007920;
	top:9rpx;
	left: 20rpx;
}
.section {
	width: 690rpx;
	background-color: #fff; 
	margin-bottom: 50rpx;

}
