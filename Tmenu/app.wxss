
/**app.wxss**/

page{
    background: #f2f2f2;
}

.page-container{
    width: 100%;
}
view{
    font-family: PingFangSC-Regular, sans-serif;
}

.ml {
    margin-left: 24rpx;
}

.mr {
    margin-right: 24rpx;
}

.txt-mid {
    font-size: 24rpx;
}

.txt-lg {
    font-size: 28rpx;
}
.arrow{
    position: absolute;
    right: 14rpx;
    top: 4rpx;
    display: block;
    width: 14rpx;
    height: 14rpx;
    border-top: 4rpx solid;
    border-right: 4rpx solid;
    border-color: #959595;
    transform: rotate(45deg);
}
.gray{
    color: #959595;
}
.b{
    font-size: 28rpx;
    font-weight: bold;
}
.placeholder-txt{
    color: #d3d3d3;
    font-size: 24rpx;
}

.page-head-title {
    flex-grow: 1;
    position: relative;
    left: 2rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.page-head-box {
    width: 92%;
    height: 190rpx;
    display: flex;
    align-items: center;
}

.notice-box{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-top: 20rpx;
    height: 30rpx;
}

.page-head-notice {
    line-height: 1.3;
    width: 90%;
}

.tel-txt{
    padding-top: 4rpx;
}

.page-head-detail {
    position: relative;
    width: 100%;
    height: 124rpx;
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}
.foot{
    display: flex;
    flex-direction: column;
    background: #f2f2f2;
    padding-top: 180rpx;
    padding-bottom: 80rpx;
    color: #8a8a8a;
    font-size: 20rpx;
}
.copy{
    text-align: center;
}
.service-tel{
    margin-top: 4rpx;
    text-align: center;
}