<view class="page-container">
    <view class="page-section">
        <view class="pay-info">
            <view class="pay-info-img bcenter">
                <image src="http://img.my-shop.cc/image/pay-icon.png" class="pay-img"></image>
            </view>
            <view class="pay-info-msg bcenter">
                <view class="pay-info-txt">已完成支付</view>
                <view class="pay-ifno-tomenu" bindtap="gotoMenu">去菜单</view>
            </view>
            <view class="pay-info-notice bcenter">
                店家埋了用餐赏金，赶快领！
            </view>
        </view>
        <view class="bc-container">
            <image src="http://img.my-shop.cc/image/hb-bc1.png" class="bc1-img"></image>
            <view class="section-box">
                <view class="hb-info">
                    <view class="hb-info-img bcenter">
                        <image src="http://img.my-shop.cc/image/hb-kai.png" class="hb-kai-img"></image>
                    </view>
                    <view class="hb-info-count bcenter">￥{{mode_money}}</view>
                    <view class="hb-info-des bcenter">红包个数随机，转发就能领一份</view>
                </view>
                <view class="play-hb">
                    <form bindsubmit="formSubmit">
                        <view class="play-set-txt">
                            <view class="play-set-title">设置口令</view>
                            <input name="utxt" placeholder="谢谢老板" maxlength="12" class="txt-input" placeholder-class="txt-input-clazz"/>
                        </view>
                        <view class="play-notice">
                            <view class="notice-title">小伙伴们说对口令就能获得随机的打赏</view>
                            <image src="http://img.my-shop.cc/image/example-voice.png" class="example-voice-img" bindtap="gotoExample"></image>
                        </view>
                        <view class="play-btn">
                            <button type="primary" disabled="{{is_dilivery?true:false}}" form-type="submit" class="play-btn">调戏一下好友们</button>
                        </view>
                    </form>
                </view>
            </view>
        </view>
    </view>
</view>