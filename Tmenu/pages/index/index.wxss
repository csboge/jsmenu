.pre-btn {
    position: absolute;
    top: calc(315rpx - 50rpx);
    width: 50rpx;
    height: 100rpx;
    background: rgba(0, 0, 0, 0.35);
}

.next-btn {
    position: absolute;
    top: calc(315rpx - 50rpx);
    right: 0;
    width: 50rpx;
    height: 100rpx;
    background: rgba(0, 0, 0, 0.35);
}

.pre-btn::after {
    position: relative;
    left: 16rpx;
    top: 50%;
    margin-top: -10rpx;
    content: "";
    display: block;
    width: 20rpx;
    height: 20rpx;
    border-top: 2rpx solid #fff;
    border-left: 2rpx solid #fff;
    transform: rotate(-45deg);
}

.next-btn::after {
    position: relative;
    right: -10rpx;
    top: 50%;
    margin-top: -10rpx;
    content: "";
    display: block;
    width: 20rpx;
    height: 20rpx;
    border-top: 2rpx solid #fff;
    border-right: 2rpx solid #fff;
    transform: rotate(45deg);
}

