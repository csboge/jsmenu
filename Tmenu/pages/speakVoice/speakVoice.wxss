page{
    background: #FFf;
}
.page-container {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.page-section {
    background-color: #d95842;
}

.shop-slider-img {
    width: 100%;
    height: 330rpx;
}

swiper {
    height: 330rpx;
    display: block;
}

.speak-txt-box {
    display: flex;
    justify-content: center;
    margin-top: 30rpx;
}

.speak-txt {
    color: #ffe1b2;
    font-size: 42rpx;
    line-height: 60rpx;
}

.voice-img {
    width: 60rpx;
    height: 60rpx;
}

.record-btn {
    margin-top: 40rpx;
    font-weight: bold;
    width: 560rpx;
    border-radius: 46rpx;
}

.entry-box {
    color: #fff;
    display: flex;
    justify-content: space-between;
    width: 320rpx;
    margin: 0 auto;
    margin-top: 36rpx;
    padding-bottom: 30rpx;
}

.icon-img {
    width: 36rpx;
    height: 36rpx;
}

.to-menu {
    display: flex;
}

.to-transmit {
    display: flex;
}

.v-txt {
    font-size: 32rpx;
    margin-left: 6rpx;
    position: relative;
    top: -6rpx;
}

.page-foot {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding-bottom: 30rpx;
}
.hb-info-box{
    display: flex;
    justify-content: space-between;
    width: 680rpx;
    color: #888787;
    font-size: 28rpx;
    font-weight: bold;
    margin: 0 auto;
    margin-top: 20rpx;
}
.hb-right-txt{
    color: #6e7fa3;
}
.check-record{
    margin-top: 60rpx;
    color: #6e7fa3;
    font-weight: bold;
    font-size: 28rpx;
    text-align: center;
}
.hb-notice{
    margin-top: 50rpx;
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    color: #888787;
}
.check-record-txt{
    width: 190rpx;
    margin: 0 auto;
}
.to-transmit-txt {
    font-size: 32rpx;
    color: #fff;
    width: 100rpx;
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
    line-height: 1;
    background-color: transparent;
    position: relative;
    top: 2rpx;
}
.to-transmit-txt::after{
    border: none;
}
.hb-list-item{
    position: relative;
    display: flex;
    width: 650rpx;
    justify-content: space-between;
    margin: 0 auto;
    padding: 20rpx 20rpx;
    border: 2rpx solid #f9f9fb;
    border-radius: 10rpx;
    margin-top: 30rpx;
}
.hb-item-left{
    display: flex;
}
.voice-user-icon{
    width: 116rpx;
    height: 116rpx;
    border-radius: 10rpx;
}
.voice-box{
    margin-left: 30rpx;
}
.user-name{
    line-height: 0.6;
}
.voice-btn{
    margin-top: 24rpx;
}
.voice-btn {
    font-size: 28rpx;
    color: #767676;
    width: 186rpx;
    margin-left: 0;
    margin-right: 0;
    padding-left: 26rpx;
    padding-right: 0;
    line-height: 2.55;
    text-align: left;
}
.hb-item-right{
    position: absolute;
    text-align: right;
    bottom: 20rpx;
    right: 20rpx;
}
.hb-count{
    font-size: 28rpx;
    font-weight: bold;
    line-height: 48rpx;
}
.hb-time{
    font-size: 26rpx;
    color: #8a8a8a;
}