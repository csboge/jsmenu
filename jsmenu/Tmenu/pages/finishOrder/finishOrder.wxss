
.page-container{
    width: 100%;
    height: 1290rpx;
    background-color: #d95842;
}
.page-section{
    width: 100%;
}
.pay-info{
    display: flex;
    flex-direction: column;
}
.pay-img{
    width: 132rpx;
    height: 132rpx;
}
.bcenter{
    display: flex;
    justify-content: center;
    margin-top: 10rpx;
}
.pay-info-img{
    margin-top: 16rpx;
}
.pay-info-txt{
    color: #fff;
    font-size: 44rpx;
    font-weight: bold;
    margin-left: 50rpx;
}
.pay-ifno-tomenu{
    position: relative;
    width: 80rpx;
    font-size: 24rpx;
    text-decoration: underline;
    color: #ffffcb;
    top: 20rpx;
    left: 50rpx;
}
.pay-ifno-tomenu::after{
    content: "";
    position: absolute;
    display: block;
    width: 10rpx;
    height: 10rpx;
    border-top: 2rpx solid #ffffcb;
    border-right: 2rpx solid #ffffcb;
    transform: rotate(45deg);
    right: 0;
    top: 8rpx;
}
.pay-info-notice{
    color: #ffffcb;
    font-size: 32rpx;
    font-weight: bold;
}
.bc-container{
    width: 750rpx;
    height: 894rpx;
    margin-top: 60rpx;
    position: relative;
}
.bc1-img{
    width: 750rpx;
    height: 894rpx;
    z-index: 9998;
}
.section-box{
    position: absolute;
    width: 750rpx;
    height: 894rpx;
    top: 0;
    left: 0;
    z-index: 9999;
}
.hb-kai-img{
    width: 234rpx;
    height: 234rpx;
}
.hb-info-count{
    font-size: 88rpx;
    font-weight: bold;
    color:#feedba;
}
.hb-info-des{
    font-size: 36rpx;
    color:#f6dba3;
    font-weight: bold;
}
.play-hb{
    width: 700rpx;
    height: 330rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin: 0 auto;
    margin-top: 30rpx;
}
.play-set-txt{
    display: flex;
    padding-top: 60rpx;
    margin-left: 40rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #444;
}
.txt-input{
    margin-left: 50rpx;
    border-bottom: 2rpx solid #e2e2e2;
    position: relative;
    top: -6rpx;
    width: 420rpx;
}
.play-btn{
    width: 630rpx;
    font-weight: bold;
    margin: 0 auto;
    margin-top: 40rpx;
}
.play-notice{
    font-size: 28rpx;
    color: #999;
    margin-left: 40rpx;
    margin-top: 20rpx;
}